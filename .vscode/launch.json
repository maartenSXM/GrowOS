	"version": "0.2.0",
	"configurations": [
		{
			"name": "ESP32 OpenOCD",
			"type": "cppdbg",
			"request": "launch",
      "MIMode": "gdb",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/build/growos.elf",
			"miDebuggerPath": "/Users/erikkoning/Documents/Prog/ESP/esp-idf/tools/xtensa-esp32s2-elf/bin/xtensa-esp32s2-elf-gdb",
			"setupCommands": [
				{ "text": "target remote :3333" },
				{ "text": "set remote hardware-watchpoint-limit 2" },
				{ "text": "mon reset halt" },
				{ "text": "thb app_main" },
				{ "text": "flushregs" }
			],
			"externalConsole": false,
			"logging": {
				"engineLogging": true
			}
		}
	]
}
